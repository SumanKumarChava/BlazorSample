@inherits EmployeeCardBase

<div class="card m-2" style="min-width: 18rem; max-width: 30.5%;">
    <div class="card-header d-flex">
        <input type="checkbox" @onchange="EmployeeCheckbox_Changed"/>
        <h3 class="mx-2">@Employee.FirstName @Employee.LastName</h3>
    </div>
    <img src="@Employee.PhotoPath" class="card-img-top imgThumbnail" />

    @if (ShowFooter)
    {
        <div class="card-footer text-center">
            <a href="@($"employeedetails/{Employee.EmployeeId}")" class="btn btn-primary m-1">View</a>

            <a href="@($"editemployee/{Employee.EmployeeId}")" class="btn btn-primary m-1">Edit</a>

            <a href="#" class="btn btn-danger m-1">Delete</a>
        </div>
    }


</div>