@page "/editemployee/{id}"
@inherits ComponentBaseClasses.EditEmployeeBase


@if (Employee == null || Departments?.Count() == 0)
    {
    <div class="spinner"></div>
    }
    else
    {
    <div>
        <h3 class="my-3">Edit Employee</h3>
        <div class="form">
            <div class="form-group row my-2">
                <label class="col-sm-2 col-form-label" for="firstName">First Name :</label>
                <div class="col-sm-10">
                    <InputText id="firstName" class="form-control" placeholder="First Name"
                               @bind-Value="Employee.FirstName" />
                </div>
            </div>
            <div class="form-group row my-2">
                <label class="col-sm-2 col-form-label" for="lastName">Last Name :</label>
                <div class="col-sm-10">
                    <InputText id="lastName" class="form-control" placeholder="Last Name" @bind-Value="Employee.LastName" />
                </div>
            </div>
            <div class="form-group row my-2">
                <label class="col-sm-2 col-form-label" for="email">Email Address :</label>
                <div class="col-sm-10">
                    <InputText id="email" class="form-control" placeholder="Email Address"
                               @bind-Value="Employee.Email" />
                </div>
            </div>
            <div class="form-group row my-2">
                <label class="col-sm-2 col-form-label" for="department">Department :</label>
                <div class="col-sm-10">
                    <CustomInputSelect id="department" class="form-select" placeholder="Department"
                                       @bind-Value="Employee.DepartmentId">
                        @foreach (var dept in Departments)
                        {
                            <option value="@dept.DepartmentId">@dept.DepartmentName</option>
                        }
                    </CustomInputSelect>
                </div>
            </div>
            <div class="form-group row my-2">
                <label class="col-sm-2 col-form-label" for="gender">Gender :</label>
                <div class="col-sm-10">
                    <CustomInputSelect id="gender" class="form-select" placeholder="Gender"
                                       @bind-Value="Employee.Gender">
                        @foreach (var gender in Enum.GetValues(typeof(Gender)))
                        {
                            <option value="@gender">@gender</option>
                        }
                    </CustomInputSelect>
                </div>
            </div>
            <div class="form-group row my-2">
                <label class="col-sm-2 col-form-label" for="dob">Date of Birth :</label>
                <div class="col-sm-10">
                    <InputDate id="dob" class="form-control" 
                                       @bind-Value="Employee.DateOfBrith"/>
                </div>
            </div>
        </div>

    </div>
    }
