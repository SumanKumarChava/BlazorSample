@page "/"
@inherits EmployeeListBase


@if (Employees == null)
{
    <div class="spinner"></div>
}
else
{

    <h3>@SelectedEmpCount employees are selected</h3>
    <div>
        <input type="checkbox" id="showFooter" @bind="ShowFooter"/>
        <label for="showFooter">Show Footer</label>
    </div>
    <div class="card-deck my-3" style="display: flex; flex-wrap: wrap;">
        @foreach (var emp in Employees)
        {
            <EmployeeManagement.Web.Components.EmployeeCard Employee="emp"
                                                            ShowFooter="ShowFooter"
                                                            OnEmpployeeSelected="EmployeeSelected"></EmployeeManagement.Web.Components.EmployeeCard>
        }
    </div>

}



