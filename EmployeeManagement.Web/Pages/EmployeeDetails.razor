@page "/employeedetails/{id}"
@page "/employeedetails"
@inherits EmployeeDetailsBase

@if (Employee == null || string.IsNullOrEmpty(DepartmentName))
{
    <div class="spinner"></div>
}
else
{
    <div class="col-sm-6">
        <div class="card text-align-center col-sm-8">
            <div class="card-header">
                <h1>@Employee.FirstName @Employee.LastName </h1>
            </div>

            <div class="card-body text-center">
                <img src="@Employee.PhotoPath" class="card-img-top" />
                <h4>Department : @DepartmentName</h4>
                <h4>Gender : @Employee.Gender</h4>
                <h4>Email : @Employee.Email</h4>
                <button class="btn btn-primary text-align-center" @onclick="HideFooter_Click">@HideFooterButton</button>
            </div>

            <div class="card-footer text-center @CssClass">
                <a href="/" class="btn btn-primary m-1">Go Back</a>
                <a href="#" class="btn btn-primary m-1">Edit</a>
                <a href="#" class="btn btn-danger m-1">Delete</a>
            </div>

        </div>
    </div>
    
}




